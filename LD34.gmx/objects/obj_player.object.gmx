          <argument>
            <kind>1</kind>
            <string>//Get the player's input
key_right = keyboard_check(vk_right);
key_left = -keyboard_check(vk_left);

//React to inputs
move = key_left + key_right;
hsp += move * movespeed;

//Image Flip
if keyboard_check (vk_right){
image_index = 0
}
if keyboard_check (vk_left){
image_index = 1
}


/*
if move {facing = 1}
if -move {facing = -1}
*/

//Friction Right
if (hsp &gt; 2) and (!keyboard_check(vk_right)){
    hsp -= move_friction;
    if (hsp &lt;= 2)
    {
        hsp = 0;   
    }
}


//Friction Left
if (hsp &lt; -2) and (!keyboard_check(vk_left)){
    hsp += move_friction;
    if (hsp &gt;= -2)
    {
        hsp = 0;   
    }
}

//Horizontal Collision
if (place_meeting(x+hsp,y,obj_ground))
{
    while(!place_meeting(x+sign(hsp),y,obj_ground))
    {
        x += sign(hsp);
    }
    hsp = 0;
}
x += hsp;
 
//Vertical Collision
if (vsp &lt; 20){ 
    vsp += 1;
} 
if (place_meeting(x,y+vsp,obj_ground))
{
    while(!place_meeting(x,y+sign(vsp),obj_ground))
    {
        y += sign(vsp);
    }
    vsp = obj_ground.vspeed;
}
y += vsp;

if position_meeting (sprite_width, sprite_height-1,obj_ground){
    instance_position(x-sprite_xoffset+sprite_width/2,y-sprite_yoffset+sprite_height,obj_ground)
    move_outside_solid(90,sprite_height);
}

//Torch Light
if global.health &lt;=0{
    global.health = 0;
}

if global.health &gt;=10{
    global.health = 10
}

//Arm following you
if instance_exists(obj_arm) &amp;&amp; (image_index == 0) //(facing == 1)
{
    arm.image_xscale = 1;
    arm.x = x + arm_x_offset ;
    arm.y = y + arm_y_offset ;
}
else if instance_exists(obj_arm) &amp;&amp; (image_index ==1) //(facing == -1)
{
    arm.image_xscale = -1;
    //arm.image_xscale = -1;
    arm.x = x - arm_x_offset;
    arm.y = y + arm_y_offset;
}

//Torch following you
if instance_exists(obj_torch) &amp;&amp; (image_index == 0)
{
    my_torch.x = x + x_offset - 6;
    my_torch.y = y + y_offset ;
}
else if instance_exists (obj_torch) &amp;&amp; (image_index == 1)
{
    my_torch.x = x - x_offset +15;
    my_torch.y = y + y_offset;
}

//Speed Limits//
if (hsp&gt;13.5) or (hsp &lt; -13.5){
    hsp = move*13.5
}
if (vspeed &gt;30){
    vspeed = 30;
}


</string>
